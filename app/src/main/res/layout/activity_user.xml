<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_activity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.pc.flickr.UserActivity">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/user_activity_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/user_profile_list"
            android:layout_width="200dp"
            android:text="profile"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/user_favorite_list"
            android:layout_width="200dp"
            android:text="Favroite"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/user_watchList_list"
            android:layout_width="200dp"
            android:text="WatchList"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/user_wishList_list"
            android:layout_width="200dp"
            android:text="WishList"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/user_rating_list"
            android:layout_width="200dp"
            android:text="Rating"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
