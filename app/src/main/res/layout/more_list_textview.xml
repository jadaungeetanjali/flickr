<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="#fff">
    <ProgressBar
        android:id="@+id/more_list_poster_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_height="match_parent" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/more_list_poster"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/movie_poster"
        android:padding="1dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/more_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovieName"
            android:padding="2dp"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/more_list_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReleaseDate"
            android:padding="2dp"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MovieId-"
                android:padding="2dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
            android:id="@+id/more_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovieId"
            android:padding="2dp"
            android:textSize="14sp"
            android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="15dp"
                android:layout_height="22dp"
                android:rating="10"
                android:numStars="0" />
            <TextView
                android:id="@+id/more_list_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:padding="2dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>