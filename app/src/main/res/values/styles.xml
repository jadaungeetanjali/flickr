<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#17968a</item>
        <item name="colorAccent">#f7931e</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/customTabText</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="customTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="RedTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#17968a</item>
        <item name="colorAccent">#00a99d</item>

        <item name="colorControlNormal">#00a99d</item>
        <item name="colorControlActivated">#17968a</item>
        <item name="colorControlHighlight">#f7931e</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="TextAppearance1">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">24dp</item>
    </style>
    <style name="FirebaseUI.TextInputEditText.EmailField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

</resources>
